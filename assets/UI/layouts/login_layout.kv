# welcome_screen.kv
<QuotesCarousel>:
  FitImage:
    radius:[30, 30, 30, 30]
    source:"/home/shashank/NRSSI/odyssey/assets/UI/images/quote_3.png"
    keep_ratio:False
  FitImage:
    radius:[30, 30, 30, 30]
    source:"/home/shashank/NRSSI/odyssey/assets/UI/images/quote_1.png"
    keep_ratio:False
  FitImage:
    radius:[30, 30, 30, 30]
    source:"/home/shashank/NRSSI/odyssey/assets/UI/images/quote_2.png"
    keep_ratio:False
    
<WelcomeScreen>:
  MDGridLayout:
    cols:2
    padding:[10, 10,10, 10]
    spacing:10
    MDCard:
      radius:[30, 30,0, 0]
      QuotesCarousel:
        radius:[30, 30,30, 30]
        loop:True
        auto_slide:True
        direction:"right"
    MDRelativeLayout:
      pos_hint:{"center_x":0.5, "center_y":0.5}
      padding:[10, 10, 10, 10]
      size_hint:(1, 1)
      MDCard:
        size_hint:(None, None)
        size:(400, 400)
        radius:[30, 30, 30, 30]
        padding:[30, 0, 30, 0]
        orientation:"vertical"
        pos_hint:{"center_x":0.5, "center_y":0.5}
        spacing:10
        MDLabel:
          text:"Hello, Welcome!"
          halign:"center"
          font_size:"24sp"
        MDTextField:
          id:uuid
          hint_text:"Aadhar Number"
          mode:"rectangle"
        MDBoxLayout:
          orientation:"horizontal"
          size_hint:(1, None)
          padding:[0, 0, 0, 0]
          MDLabel:
            text:"New User? [u][color=#52ACEB][ref='']Register[/ref][/color][/u]"
            on_ref_press:root.new_user_callback()
            markup:True
          MDRaisedButton:
            elevation:1
            pos_hint:{"center_x":0.5, "center_y":0.5}
            text:"Proceed"
            on_release:root.proceed_button_callback()

# welcome_screen.kv
<WelcomeScreen>:
  MDGridLayout:
    cols:2
    padding:[10, 10,10, 10]
    spacing:10
    MDCard:
      radius:[30, 30,0, 0]
      Image:
        source:"/home/shashank/Downloads/96757-genio-welcome.gif"
        anim_delay:0.03
    MDRelativeLayout:
      pos_hint:{"center_x":0.5, "center_y":0.5}
      padding:[10, 10, 10, 10]
      size_hint:(1, 1)
      MDCard:
        size_hint:(None, None)
        size:(400, 400)
        radius:[30, 30, 30, 30]
        padding:[30, 0, 30, 0]
        orientation:"vertical"
        pos_hint:{"center_x":0.5, "center_y":0.5}
        spacing:10
        MDLabel:
          text:"Welcome!"
          halign:"center"
          font_size:"24sp"
        MDTextField:
          id:uuid
          hint_text:"Aadhar Number"
          mode:"rectangle"
        MDBoxLayout:
          orientation:"horizontal"
          size_hint:(1, None)
          padding:[0, 0, 0, 0]
          MDLabel:
            text:"New User? [u][color=#3f6ad8][ref='']Register[/ref][/color][/u]"
            on_ref_press:root.new_user_callback()
            markup:True
          MDRaisedButton:
            elevation:1
            md_bg_color:"#8ca9f5"
            pos_hint:{"center_x":0.5, "center_y":0.5}
            text:"Proceed"
            on_release:root.proceed_button_callback()

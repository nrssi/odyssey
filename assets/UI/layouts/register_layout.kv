# welcome_screen.kv
<RegisterScreen>:
  MDGridLayout:
    cols:2
    padding:[10, 10,10, 10]
    spacing:10
    MDGridLayout:
      rows:2
      spacing:10
      MDCard:
        orientation:"vertical"
        radius:[30, 30,0, 0]
        CameraFeed:
          id:web_camera
          radius:[30, 30,30, 30]
        MDRaisedButton:
          id:capture_button
          text:"Capture"
          on_press:root.capture_callback()
          size_hint:(None, None)
          pos_hint:{"center_x":0.5, "center_y":0.5}
      MDCard:
        radius:[30, 30,0, 0]
        orientation:"vertical"
        FingerPrint:
          id:fingerprint_image
          radius:[30, 30,30, 30]
        MDRaisedButton:
          id:read_button
          text:"Capture"
          size_hint:(None, None)
          on_press:root.fingerprint_callback()
          pos_hint:{"center_x":0.5, "center_y":0.5}
    MDRelativeLayout:
      pos_hint:{"center_x":0.5, "center_y":0.5}
      padding:[10, 10, 10, 10]
      size_hint:(1, 1)
      MDCard:
        id:this
        size_hint:(0.89, 0.89)
        radius:[30, 30, 30, 30]
        padding:[30, 0, 30, 0]
        border: 4, 4, 4, 4
        border_color: 1, 0, 0, 1
        orientation:"vertical"
        pos_hint:{"center_x":0.5, "center_y":0.5}
        spacing:10
        MDLabel:
          text:"Get Started"
          halign:"center"
          font_size:"40sp"
        MDLabel:
          text:"Registration for [color=#FE6A68]New Voters[/color]"
          markup:True
          halign:"center"
          font_size:"18sp"
        MDTextField:
          id:name
          hint_text:"Name"
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          mode:"rectangle"
        MDTextField:
          id:aadhar_number
          hint_text:"Aadhar Number"
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          mode:"rectangle"
        MDTextField:
          id:address
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          hint_text:"Address"
          mode:"rectangle"
        MDTextField:
          id:father_name
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          hint_text:"Father's Name"
          mode:"rectangle"
        MDTextField:
          id:mother_name
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          hint_text:"Mother's Name"
          mode:"rectangle"
        MDTextField:
          id:dob
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          hint_text:"Date Of Birth"
          mode:"rectangle"
        MDTextField:
          id:email
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          hint_text:"Email"
          mode:"rectangle"
        MDTextField:
          id:contact_ph
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          hint_text:"Contact Number"
          mode:"rectangle"
        MDBoxLayout:
          orientation:"horizontal"
          pos_hint:{"center_x":0.5}
          size_hint:(0.8, None)
          padding:[0, 0, 0, 0]
          MDAnchorLayout:
            size_hint:(1, None)
            anchor_x:"left"
            MDRaisedButton:
              size_hint:(0.5, None)
              width:400
              height:390
              text:"Back"
              on_release:root.back_button_callback()
          MDAnchorLayout:
            size_hint:(1, None)
            anchor_x:"right"
            MDRaisedButton:
              size_hint:(0.5, None)
              width:400
              height:390
              on_release:root.register_button_callback()
              text:"Proceed"

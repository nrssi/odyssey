<DetailScreen>:
  MDBoxLayout:
    orientation:"horizontal"
    MDCard:
      orientation:"vertical"
      Image:
        id:face_data
        size_hint:(1, 1)
    MDBoxLayout:
      orientation:"vertical"
      MDLabel:
        text:"Details"
        font_size:"30sp"
      MDCard:
        MDLabel:
          text:"UUID : "
        MDLabel:
          id:uuid
      MDCard:
        MDLabel:
          text:"Name : "
        MDLabel:
          id:user_name
      MDCard:
        MDLabel:
          text:"Address : "
        MDLabel:
          id:address
      MDCard:
        MDLabel:
          text:"Date Of Birth"
        MDLabel:
          id:dob
      MDCard:
        MDLabel:
          text:"Email"
        MDLabel:
          id:email
      MDCard:
        MDLabel:
          text:"Contact Number"
        MDLabel:
          id:contact_ph
      MDCard:
        MDLabel:
          text:"Mother Name"
        MDLabel:
          id:mother_name
      MDCard:
        MDLabel:
          text:"Father Name"
        MDLabel:
          id:father_name
      MDRaisedButton:
        text:"Proceed"
        on_release:root.manager.current="auth"
